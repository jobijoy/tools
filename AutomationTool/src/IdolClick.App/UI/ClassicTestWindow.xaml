<Window x:Class="IdolClick.UI.ClassicTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IdolClick Classic Test Window"
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AutomationProperties.AutomationId="ClassicTestWindow">
    
    <!-- 
        Integration test window for the classic rule engine.
        Each element has a unique Name/Content that rules can match against.
        The code-behind tracks which elements were clicked for verification.
    -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Classic Engine Test Surface" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>

        <!-- Row 1: Standard buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4">
            <Button Content="Accept" Name="BtnAccept" Width="90" Margin="0,0,8,0" Click="OnTestButtonClick"/>
            <Button Content="Decline" Name="BtnDecline" Width="90" Margin="0,0,8,0" Click="OnTestButtonClick"/>
            <Button Content="Allow (Ctrl+Enter)" Name="BtnAllowShortcut" Width="140" Click="OnTestButtonClick"/>
        </StackPanel>

        <!-- Row 2: Buttons with special names for matching tests -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,4">
            <Button Content="Save Changes" Name="BtnSaveChanges" Width="110" Margin="0,0,8,0" Click="OnTestButtonClick"/>
            <Button Content="Cancel" Name="BtnCancel" Width="80" Margin="0,0,8,0" Click="OnTestButtonClick"/>
            <Button Content="OK" Name="BtnOK" Width="60" Click="OnTestButtonClick"/>
        </StackPanel>

        <!-- Row 3: Different control types -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,8">
            <CheckBox Content="Enable Feature" Name="ChkEnableFeature" Margin="0,0,16,0"/>
            <CheckBox Content="Auto Update" Name="ChkAutoUpdate" Margin="0,0,16,0"/>
            <RadioButton Content="Option A" Name="RadOptionA" GroupName="TestGroup" Margin="0,0,8,0"/>
            <RadioButton Content="Option B" Name="RadOptionB" GroupName="TestGroup"/>
        </StackPanel>

        <!-- Row 4: Text inputs -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,4">
            <TextBox Name="TxtInput" Width="200" Margin="0,0,8,0" 
                     AutomationProperties.Name="Test Input Field"/>
            <ComboBox Name="CboDropdown" Width="150" AutomationProperties.Name="Test Dropdown">
                <ComboBoxItem Content="Choice One"/>
                <ComboBoxItem Content="Choice Two"/>
                <ComboBoxItem Content="Choice Three"/>
            </ComboBox>
        </StackPanel>

        <!-- Row 5: Menu-like items -->
        <StackPanel Grid.Row="5" Margin="0,8">
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Header="New" Name="MenuNew"/>
                    <MenuItem Header="Open" Name="MenuOpen"/>
                    <MenuItem Header="Save" Name="MenuSave"/>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Undo" Name="MenuUndo"/>
                    <MenuItem Header="Redo" Name="MenuRedo"/>
                </MenuItem>
            </Menu>
        </StackPanel>

        <!-- Row 6: Disabled & hidden elements -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0,4">
            <Button Content="Disabled Action" Name="BtnDisabled" Width="120" Margin="0,0,8,0" IsEnabled="False"/>
            <Button Content="Hidden Action" Name="BtnHidden" Width="120" Visibility="Collapsed"/>
            <TextBlock Text="Status: Ready" Name="TxtStatus" VerticalAlignment="Center" Margin="8,0,0,0"/>
        </StackPanel>

        <!-- Row 7: Nested container for region tests -->
        <GroupBox Grid.Row="7" Header="Region Test Area" Margin="0,8" Padding="8">
            <StackPanel Orientation="Horizontal">
                <Button Content="Region Button A" Name="BtnRegionA" Width="120" Margin="0,0,8,0" Click="OnTestButtonClick"/>
                <Button Content="Region Button B" Name="BtnRegionB" Width="120" Click="OnTestButtonClick"/>
            </StackPanel>
        </GroupBox>

        <!-- Row 8: Result log -->
        <GroupBox Grid.Row="8" Header="Click Log" Margin="0,8,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock Name="TxtClickLog" TextWrapping="Wrap" FontFamily="Consolas" FontSize="11"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
