<Window x:Class="IdolClick.UI.RegionSelectorOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Region" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Cursor="Cross"
        KeyDown="Window_KeyDown"
        MouseDown="Window_MouseDown"
        MouseMove="Window_MouseMove"
        MouseUp="Window_MouseUp">

    <Grid>
        <!-- Semi-transparent overlay -->
        <Rectangle x:Name="OverlayBackground" Fill="#40000000" IsHitTestVisible="False"/>

        <!-- Selection rectangle -->
        <Canvas x:Name="SelectionCanvas">
            <Rectangle x:Name="SelectionRect" 
                       Stroke="#00AAFF" 
                       StrokeThickness="2" 
                       StrokeDashArray="4 2"
                       Fill="#2000AAFF"
                       Visibility="Collapsed"/>
            
            <!-- Dimension label -->
            <Border x:Name="DimensionLabel" 
                    Background="#E0000000" 
                    CornerRadius="4" 
                    Padding="8,4"
                    Visibility="Collapsed">
                <TextBlock x:Name="DimensionText" 
                           Foreground="White" 
                           FontFamily="Consolas" 
                           FontSize="12"/>
            </Border>
        </Canvas>

        <!-- Instructions panel -->
        <Border HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Margin="0,50,0,0"
                Background="#E0000000" 
                CornerRadius="8" 
                Padding="20,15">
            <StackPanel>
                <TextBlock Text="ðŸ–± Click and drag to select a region" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Press ESC to cancel â€¢ Enter to confirm" 
                           Foreground="#AAAAAA" 
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Coordinates display -->
        <Border x:Name="CoordinatesPanel"
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom" 
                Margin="20,0,0,20"
                Background="#E0000000" 
                CornerRadius="4" 
                Padding="12,8">
            <TextBlock x:Name="CoordinatesText" 
                       Foreground="White" 
                       FontFamily="Consolas" 
                       FontSize="11"
                       Text="Position: (0, 0)"/>
        </Border>
    </Grid>
</Window>
