{
  "$schema": "https://raw.githubusercontent.com/jobijoy/IdolClick/main/schemas/config-schema.json",
  "schemaVersion": 1,
  "settings": {
    "automationEnabled": true,
    "pollingIntervalMs": 10000,
    "showPanelOnStart": true,
    "toggleHotkey": "Ctrl+Alt+T",
    "logLevel": "Info",
    "theme": "Dark",
    "showExecutionCount": true,
    "scriptingEnabled": true,
    "pluginsEnabled": false
  },
  "rules": [
    {
      "id": "sample-auto-accept",
      "name": "Auto-Accept Dialogs",
      "enabled": true,
      "isRunning": true,
      "targetApp": "Notepad, Calculator",
      "windowTitle": "",
      "elementType": "Button",
      "matchText": "OK, Continue, Accept, Yes",
      "useRegex": false,
      "excludeTexts": ["Cancel", "No", "Don't Save"],
      "action": "Click",
      "cooldownSeconds": 5,
      "dryRun": false
    },
    {
      "id": "sample-account-picker",
      "name": "Account Picker Auto-Select",
      "enabled": false,
      "isRunning": false,
      "targetApp": "",
      "windowTitle": "Select an account",
      "elementType": "Any",
      "matchText": "MyAccount",
      "useRegex": false,
      "excludeTexts": [],
      "action": "Click",
      "cooldownSeconds": 5,
      "dryRun": false
    },
    {
      "id": "sample-continue-button",
      "name": "Continue Button Auto-Click",
      "enabled": false,
      "isRunning": false,
      "targetApp": "",
      "windowTitle": "",
      "elementType": "Button",
      "matchText": "Continue",
      "useRegex": false,
      "excludeTexts": [],
      "action": "Click",
      "cooldownSeconds": 5,
      "dryRun": false
    }
  ]
}
